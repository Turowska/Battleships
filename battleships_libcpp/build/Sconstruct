import os
import platform

BOOSTPATH = '/usr/local/boost_1_73_0'
PYTHONPATH = '/usr/include/python2.7'
BOOSTLIBPATH = '/usr/local/lib'

if platform.system() == "Windows":
    print("Windows!")
    env = Environment()
    env.Append(CPPPATH = ['../inc', BOOSTPATH, PYTHONPATH])
    env.Append(LINKFLAGS='/SUBSYSTEM:CONSOLE')
    env.Append(CXXFLAGS='/EHsc /MD /std:c++17')
    env.Append(LIBPATH = [BOOSTLIBPATH])
    VariantDir('#/../object', '#/../src', duplicate=0)
    env.SharedLibrary('#/../pythonGame', [Glob('#/../object/*.cc')], LIBS = ['boost_python', 'python2.7'])
else:
    print("Linux!")
    env = Environment()
    env.Append(CPPPATH = ['../inc', BOOSTPATH, PYTHONPATH])
    env.Append(CXXFLAGS='-pedantic -Wall -std=c++17')
    env.Append(LIBPATH = [BOOSTLIBPATH])
    VariantDir('#/../object', '#/../src', duplicate=0)
    env.SharedLibrary('#/../pythonGame', [Glob('#/../object/*.cc')], LIBS = ['boost_python', 'python2.7'])
